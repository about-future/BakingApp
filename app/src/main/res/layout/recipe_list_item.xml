<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <ImageView
        android:id="@+id/recipe_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/nutella_pie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:text="www.tablespoon.com" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/spacing">

        <TextView
            android:id="@+id/recipe_name_tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/recipes_name_font_size"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/recipe_serving_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:text="Serving for 8 people." />

    </LinearLayout>

</android.support.v7.widget.CardView>