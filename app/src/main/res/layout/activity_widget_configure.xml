<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing"
    tools:context=".widget.WidgetConfigureActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="8dp"
                android:paddingEnd="@dimen/spacing"
                android:paddingStart="@dimen/spacing"
                android:paddingTop="@dimen/spacing"
                android:text="@string/please_choose"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/recipes_config_font_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipes_config_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>