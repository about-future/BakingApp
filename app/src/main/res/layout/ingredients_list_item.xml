<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:orientation="horizontal"
    android:padding="@dimen/spacing">

    <LinearLayout
        android:layout_width="@dimen/quantity_measure_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_margin"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/messages_font_size"
            tools:text="6" />

        <TextView
            android:id="@+id/widget_measure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/messages_font_size"
            tools:text="TBLSP" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_ingredient_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="@dimen/messages_font_size"
        tools:text="semisweet chocolate chips" />

</LinearLayout>